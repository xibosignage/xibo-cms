<!doctype html>
<html lang="en">
    <head>
        <title>Xibo Open Source Digital Signage</title>
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=[[ViewPortWidth]]" />
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
        <!-- Copyright 2006-2022 Xibo Signage Ltd. Part of the Xibo Open Source Digital Signage Solution. Released under the AGPLv3 or later. -->
        <script type="text/javascript" src="[[PlayerBundle]]"></script>
        <style type="text/css">
            body {
                margin: 0;
                overflow: hidden;
                font-family: sans-serif, Arial, Verdana, "Trebuchet MS";
            }
            h1, h2, h3, h4, p {
                margin-top: 0;
            }
            #iframe {
                border: 0;
            }
            .cycle-slide p, p.cycle-slide {
                margin-bottom:0;
            }
        </style>
    </head>
    <body>
        <div id="content"></div>
    {% for item in twig %}
        {{ item|raw }}
    {% endfor %}
    </body>
    <script type="text/javascript">
        window.globalOptions = {
          originalWidth: {{ width }},
          originalHeight: {{ height }},
          duration: {{ duration }},
          cmsDateFormat: '{{ cmsDateFormat }}'
        };
        var widgetData = [];
        {% for item in data %}
        widgetData.push({{ item|json_encode|raw }});
        {% endfor %}

        {% if elementGroups %}
        var elements = [];
        {% for item in elements %}
        elements.push({{ item|raw }});
        {% endfor %}
        {% endif %}
    </script>
{% for id, item in hbs %}
    <script type="text/x-handlebars-template" id="hbs-{{ id }}" data-width="{{ item.width }}" data-height="{{ item.height }}">{{ item.content|raw }}</script>
{% endfor %}
{% for widgetId, parser in onParseData %}
    <script type="text/javascript" id="onParseData-{{ widgetId }}">
      function onParseData_{{ widgetId }}(item, properties) {
        {{ parser|raw }}
      }
    </script>
{% endfor %}
{% for widgetId, parser in onFinish %}
    <script type="text/javascript" id="onFinish-{{ widgetId }}">
        function onFinish_{{ widgetId }}(id, target, items, properties, globalOptions) {
          {{ parser|raw }}
        }
    </script>
{% endfor %}
{% for templateId, renderer in onRender %}
    <script type="text/javascript" id="onRender-{{ templateId }}">
      function onRender_{{ templateId }}({id, target, items, properties, globalOptions} = {}) {
        {{ renderer|raw  }}
      }
    </script>
{% endfor %}
    <!-- NUMITEMS={{ numItems }} -->
    <!-- DURATION={{ duration }} -->
</html>