<script type="text/javascript">

    // Runs after form opens
    function calendar_form_edit_open() {
        var self = this;

        var updateInlineEditor = function() {
            var $calendarTemplateSwitch = $(self).find('#template_advanced');

            if($calendarTemplateSwitch.is(':checked') && $(self).find('#calendarType').val() > 0) {
                $calendarTemplateSwitch.bootstrapSwitch('state', false);
            }
        };

        var updateColors = function() {
            var CALENDAR_TYPE_NAMES = [
                'custom',
                'agenda',
                'daily',
                'weekly',
                'monthly'
            ];
            var overrideTemplate = $(self).find('#overrideColorTemplate').prop('checked');
            var calendarType = CALENDAR_TYPE_NAMES[$(self).find('#calendarType').val()];
            var templates = $(self).data().extra.templates;
            var $templateThemePicker = $(self).find('#templateTheme');

            // Toggle elements
            $(self).find('.template-colors-select').toggle(!overrideTemplate);
            $(self).find('.template-colors-custom').toggle(overrideTemplate);

            if(!$(self).find('#overrideColorTemplate').prop('checked')) {
                var templateColors;

                // Get the current template id and fill the text field with its colour values
                for(var i = 0;i < templates.length;i++) {
                    if(templates[i].id == calendarType) {
                        templateColors = templates[i][$templateThemePicker.val()];
                        break;
                    }
                }

                // Use template colors for the input fields
                for (var name in templateColors) {
                    if (templateColors.hasOwnProperty(name)) {
                        $(self).find('#' + name).val(templateColors[name]);
                    }
                }
            }
        }

        // Set duration field, using the helper
        formHelpers.setupCheckboxInputFields($(self).find('form'), '#useDuration', '.duration-fields');

        // Set clock type input field, using the helper ()
        formHelpers.setupObjectValueInputFields($(self), '#calendarType', ['.custom-control-group', '.agenda-control-group', '.daily-control-group', '.weekly-control-group', '.monthly-control-group'], [0, 1, 2, 3, 4]);

        // Set template field, using the helper
        formHelpers.setupCheckboxInputFields($(self).find('form'), '#useCurrentTemplate', '.current-event-template');

        // Set effect type input field, using the helper ()
        formHelpers.setupObjectValueInputFields($(self).find('form'), '#effect', ['.effect-controls'], ['none'], true);

        // Setup editors
        formHelpers.setupDualTypeTextArea(self, 'template', !$(self).data('formEditorOnly'));
        formHelpers.setupDualTypeTextArea(self, 'currentEventTemplate');
        formHelpers.setupDualTypeTextArea(self, 'noDataMessage');

        // set date range fields
        formHelpers.setupCheckboxInputFields($(self).find('form'), '#useDateRange', '.date-range', '.interval');

        $(self).find('#calendarType').on('change', updateInlineEditor);
        updateInlineEditor();

        $(self).find('#overrideColorTemplate, #templateTheme').on('change', updateColors);
        updateColors();
    }

    // Runs before form submit
    function calendar_form_edit_submit() {

        // Update text callback fields
        formHelpers.updateCKEditor();
    }

</script>
