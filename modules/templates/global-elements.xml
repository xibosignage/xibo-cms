                <visibility>
                    <test>
                        <condition field="outline" type="eq">1</condition>
                    </test>
                </visibility>
            </property>
        </properties>
        <stencil>
            <hbs><![CDATA[
<div class="rectangle-container"
    style="background-color: {{backgroundColor}};
