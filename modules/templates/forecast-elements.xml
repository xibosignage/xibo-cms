if ($(target).parent().parent().find('.sampleCSS').length == 0) {
    $(target).parent().parent().prepend(`<link rel="stylesheet" href="${$iconContainer.data('cssUrl')}" class="sampleCSS" media="screen"/>`)
}
]]></onTemplateRender>
