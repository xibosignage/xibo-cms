<module>
    <id>core-realtime-dataset</id>
    <name>Realtime Data</name>
    <author>Core</author>
    <description>Display Realtime Data</description>
    <icon>fa fa-bolt</icon>
    <class>\Xibo\Widget\DataSetProvider</class>
    <dataCacheKey>%dataSetId%</dataCacheKey>
    <type>realtime-data</type>
    <dataType>realtime</dataType>
    <schemaVersion>1</schemaVersion>
    <assignable>1</assignable>
    <regionSpecific>1</regionSpecific>
    <renderAs>html</renderAs>
    <defaultDuration>60</defaultDuration>
    <settings></settings>
    <properties>
        <property id="dataSetId" type="datasetSelector">
            <title>DataSet</title>
            <helpText>Please select the DataSet to use as a source of data for this template.</helpText>
        </property>
    </properties>
    <preview></preview>
</module>
