<div class="form-group xibo-form-input rich-text-input {{customClass}}" {{#if visibility}}data-visibility="{{visibility}}"{{/if}}>
    <label for="{{id}}" class="control-label"><strong>{{title}}</strong></label>
    <div class="input-info-container"></div>
    <div class="rich-text-container">
        <textarea type="text" class="form-control rich-text" id="{{id}}" name="{{id}}" />{{value}}</textarea>
    </div>
    {{#if richTextControls}}
        <div>Rich Text Controls</div>
    {{/if}}
</div>