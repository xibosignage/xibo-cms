<form class="widget-form">
    <ul class="nav nav-tabs" role="tablist">
        <li class="nav-item"><a class="nav-link active" href="#configureTab" role="tab" data-toggle="tab"><span>{{trans.configure}}</span></a></li>
        <li class="nav-item d-none"><a class="nav-link" href="#appearanceTab" role="tab" data-toggle="tab"><span>{{trans.appearance}}</span></a></li>
        <li class="nav-item"><a class="nav-link" href="#advancedTab" role="tab" data-toggle="tab"><span>{{trans.advanced}}</span></a></li>
    </ul>
    <div class="form-content">
        <form id="widgetFormEdit" class="XiboForm">
            <div class="tab-content">
                <div class="tab-pane active" id="configureTab"></div>

                <div class="tab-pane" id="appearanceTab"></div>

                <div class="tab-pane" id="advancedTab">
                    {{set "name" (concat target "_name")}}
                    {{set "useDuration" (concat target "_useDuration")}}
                    {{set "duration" (concat target "_duration")}}
                    {{set "enableStat" (concat target "_enableStat")}}
                    {{> inputs/text value=commonProperties.name id=name name="name" title="Name" helpText="An optional name for this widget" }}
                    {{> inputs/checkbox value=commonProperties.useDuration id=useDuration name="useDuration" title="Set a duration?" helpText="Select to provide a specific duration for this Widget" }}
                    {{> inputs/number value=commonProperties.duration id=duration name="duration" title="Duration" helpText="The duration of the widget in seconds" visibility='{ "field": "useDuration", "type": "eq", "value": "1" }' }}
                    {{> inputs/dropdown value=commonProperties.enableStat options=(arr (obj name='Off' title='Off') (obj name='On' title='On') (obj name='Inherit' title='Inherit')) optionsTitle="title" optionsValue="name" id=enableStat name="enableStat" title="Enable Stats Collection?" helpText="Enable the collection of Proof of Play statistics for this Widget. Ensure that ‘Enable Stats Collection’ is set to ‘On’ in the Display Settings." }}
                </div>
            </div>
        </form>
    </div>
</form>