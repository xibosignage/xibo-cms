<div class="toolbar-card {{#eq cardType "moduleGroup"}}toolbar-card-group{{/eq}} {{#neq dataType ""}}toolbar-card-menu{{/neq}} {{#if favourited}}favourited{{/if}}" 
    data-toggle="tooltip" 
    data-type="{{contentType}}" 
    data-sub-type="{{type}}"
    data-data-type="{{dataType}}"
    data-target="{{#if target}}{{target}}{{else}}layout playlist drawer{{/if}}"
    data-region-specific="{{regionSpecific}}"
    data-valid-ext="{{ validExtensions }}"
    data-max-size="{{ maxSize }}" 
    data-max-size-message="{{ maxSizeMessage }}"
    data-title="{{name}}"
    data-description="{{description}}">
    
    {{#eq contentType "widgets"}}
        <div class="btn-favourite" data-toggle="tooltip" data-placement="left" 
            {{#unless favourited}}
                data-title="{{trans.addAsFavourite}}
            {{/unless}}
            ">
            <i class="fa {{#if favourited}}fa-star{{else}}fa-star-o{{/if}}"></i>
        </div>

        {{#neq dataType ""}}
            <div class="open-submenu" data-title="{{trans.open}}" data-toggle="tooltip" data-placement="right">
                <i class="fa fa-angle-right"></i>
            </div>
        {{/neq}}
    {{/eq}}
    
    <i class="fa {{icon}}-icon-{{type}} card-icon"></i>
    
    <span class="card-title">{{name}}</span>
</div>