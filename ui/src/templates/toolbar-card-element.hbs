<div class="toolbar-card toolbar-card-element {{#if thumbnail}}has-thumb{{/if}}" 
    data-toggle="tooltip" 
    data-type="{{type}}" 
    data-sub-type="{{dataType}}"
    data-target="{{#if target}}{{target}}{{else}}layout{{/if}}"
    data-template-id="{{templateId}}"
    data-template-start-width="{{startWidth}}"
    data-template-start-height="{{startHeight}}"
    >

{{#if thumbnail}}
    <div class="toolbar-card-thumb">
        <img src="{{thumbnail}}" />
    </div>
{{/if}}
    
    <div class="toolbar-content tooltip-always-on" data-toggle="tooltip" data-title="{{title}}">
        <span class="card-title">{{title}}</span>
    </div>
</div>