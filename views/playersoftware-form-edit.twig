{% extends "form-base.twig" %}
{% import "forms.twig" as forms %}

{% block formTitle %}
    {% trans "Edit Version" %}
{% endblock %}

{% block formButtons %}
    {% trans "Cancel" %}, XiboDialogClose()
    {% trans "Save" %}, $("#playersoftwareEditForm").submit()
{% endblock %}

{% block formHtml %}
    <div class="row">
        <div class="col-md-12">
            <form id="playersoftwareEditForm" class="XiboForm form-horizontal" method="put" action="{{ url_for("playersoftware.edit", {"id": version.versionId}) }}">
                {% set title %}{% trans "Player Version Name" %}{% endset %}
                {% set helpText %}{% trans "The Name of the player version application, this will be displayed in Version dropdowns in Display Profile and Display" %}{% endset %}
                {{ forms.input("playerShowVersion", title, version.playerShowVersion, helpText) }}

                {% set title %}{% trans "Version" %}{% endset %}
                {% set helpText %}{% trans "The Version number of this installer file, this should be correctly populated on upload, otherwise adjust it here" %}{% endset %}
                {{ forms.input("version", title, version.version, helpText) }}

                {% set title %}{% trans "Code" %}{% endset %}
                {% set helpText %}{% trans "The Code number of this installer file, this should be correctly populated on upload, otherwise adjust it here" %}{% endset %}
                {{ forms.number("code", title, version.code, helpText) }}
            </form>
        </div>
    </div>
{% endblock %}