              }
            }
          },
          {
            name: 'campaign',
            className: 'align-middle',
            responsivePriority: 2,
            data: function (data) {
              if (data.eventTypeId === 9) {
                return data.syncType;
              } else if (data.eventTypeId === 2) {
                return data.command;
              } else {
                return data.campaign;
              }
            }
          },
          {
            data: 'campaignId',
            responsivePriority: 5,
            className: 'none',
          },
          {
