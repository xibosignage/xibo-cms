{% extends "form-base.twig" %}
{% import "forms.twig" as forms %}

{% block formTitle %}
    {% trans "Export Statistics" %}
{% endblock %}

{% block formButtons %}
    {% trans "Help" %}, XiboHelpRender("{{ help }}")
    {% trans "Cancel" %}, XiboDialogClose()
    {% trans "Save" %}, statsExportFormSubmit()
{% endblock %}

{% block formHtml %}
    <div class="row">
        <div class="col-md-12">
            <form id="statisticsExportForm" class="XiboManualForm form-horizontal" method="get" action="{{ urlFor("stats.export") }}">
                {% set title %}{% trans "From Date" %}{% endset %}
                {{ forms.date("fromDt", title) }}

                {% set title %}{% trans "To Date" %}{% endset %}
                {{ forms.date("toDt", title) }}

                {% set title %}{% trans "Display" %}{% endset %}
                {{ forms.dropdown("displayId", "single", title, "", [{"displayId": null, "display": ""}]|merge(displays), "displayId", "display") }}
            </form>
        </div>
    </div>
{% endblock %}