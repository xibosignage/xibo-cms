{% extends "form-base.twig" %}
{% import "forms.twig" as forms %}

{% block formTitle %}
    {% trans "Delete Recurring Event." %}
{% endblock %}

{% block callBack %}setupScheduleForm{% endblock %}

{% block formButtons %}
    {% trans "Cancel" %}, XiboDialogClose()
    {% trans "Yes" %}, $("#scheduleRecurrenceDeleteForm").submit()
{% endblock %}

{% block formHtml %}
    <div class="row">
        <div class="col-md-12">
            <form id="scheduleRecurrenceDeleteForm" class="form-horizontal" method="delete" action="{{ url_for("schedule.recurrence.delete", {"id": event.eventId}) }}">
                {% set message %}{% trans "Are you sure you want to delete this recurring event? Clicking Yes will delete this event from <b>all</b> displays." %}{% endset %}
                {{ forms.message(message) }}

                {{ forms.hidden('eventStart', eventStart) }}
                {{ forms.hidden('eventEnd', eventEnd) }}
            </form>
        </div>
    </div>
{% endblock %}