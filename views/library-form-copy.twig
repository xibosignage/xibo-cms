{% extends "form-base.twig" %}
{% import "forms.twig" as forms %}

{% block formTitle %}
    {% set name = media.name %}
    {% trans %}Copy {{ name }}{% endtrans %}
{% endblock %}

{% block formButtons %}
    {% trans "Help" %}, XiboHelpRender("{{ help }}")
    {% trans "Cancel" %}, XiboDialogClose()
    {% trans "Copy" %}, $("#libraryCopyForm").submit()
{% endblock %}

{% block formHtml %}
    <div class="row">
        <div class="col-md-12">
            <form id="libraryCopyForm" class="XiboForm form-horizontal" method="post" action="{{ urlFor("library.copy", {id: media.mediaId}) }}")>
                {% set title %}{% trans "Name" %}{% endset %}
                {% set helpText %}{% trans "The Name of the Media - (1 - 50 characters)" %}{% endset %}
                {% set mediaName %}{{ media.name }} 2{% endset %}
                {{ forms.input("name", title, mediaName, helpText) }}

                {% set title %}{% trans "Tags" %}{% endset %}
                {% set helpText %}{% trans "Tag this media. Comma Separated." %}{% endset %}
                {{ forms.inputWithTags("tags", title, tags, helpText) }}
            </form>
        </div>
    </div>
{% endblock %}