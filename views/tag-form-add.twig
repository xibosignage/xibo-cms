{% extends "form-base.twig" %}
{% import "forms.twig" as forms %}
{% import "inline.twig" as inline %}

{% block formTitle %}
    {% trans "Add Tag" %}
{% endblock %}

{% block formButtons %}
    {% trans "Cancel" %}, XiboDialogClose()
    {% trans "Save" %}, $("#tagAddForm").submit()
{% endblock %}

{% block formHtml %}
    <div class="row">
        <div class="col-md-12">
            <form id="tagAddForm" class="XiboForm form-horizontal" method="post" action="{{ url_for("tag.add") }}">
                {% set title %}{% trans "Name" %}{% endset %}
                {% set helpText %}{% trans "The Name for this Tag" %}{% endset %}
                {{ forms.input("name", title, "", helpText) }}

                {% set title %}{% trans "Values" %}{% endset %}
                {% set helpText %}{% trans "Comma separated string of additional values that should be associated with this Tag. Values entered here will be available for selection when assigning this Tag." %}{% endset %}
                {{ forms.input("options", title, "", helpText) }}

                {% set title %}{% trans "Required Value?" %}{% endset %}
                {% set helpText %}{% trans "Tick to ensure that a value is selected when assigning this Tag" %}{% endset %}
                {{ forms.checkbox("isRequired", title, 0, helpText) }}
            </form>
        </div>
    </div>
{% endblock %}