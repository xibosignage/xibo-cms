{% extends "form-base.twig" %}
{% import "forms.twig" as forms %}

{% block formTitle %}
    {% trans "Edit Report Schedule" %}
{% endblock %}

{% block formButtons %}
    {% trans "Cancel" %}, XiboDialogClose()
    {% trans "Save" %}, $("#reportScheduleFormSubmit").submit()
{% endblock %}

{% block formHtml %}
    <div class="row">
        <div class="col-md-12">
            <form id="reportScheduleFormSubmit" class="XiboForm form-horizontal" method="put" action="{{ url_for("reportschedule.edit", {id: reportSchedule.reportScheduleId}) }}">

                {% set title %}{% trans "Schedule Name" %}{% endset %}
                {{ forms.input("name", title, reportSchedule.name) }}

                {% set title %}{% trans "Start Time" %}{% endset %}
                {% set helpText %}{% trans "Set a future date and time to run this report. Leave blank to run from the next collection point." %}{% endset %}
                {{ forms.dateTime("fromDt", title, reportSchedule.fromDt, helpText, "starttime-control") }}

                {% set title %}{% trans "End Time" %}{% endset %}
                {% set helpText %}{% trans "Set a future date and time to end the schedule. Leave blank to run indefinitely." %}{% endset %}
                {{ forms.dateTime("toDt", title, reportSchedule.toDt, helpText, "endtime-control") }}
            </form>
        </div>
    </div>
{% endblock %}