{% extends "form-base.twig" %}
{% import "forms.twig" as forms %}

{% block formTitle %}
    {% trans "Add Module Template" %}
{% endblock %}

{% block formButtons %}
    {% trans "Cancel" %}, XiboDialogClose()
    {% trans "Save" %}, $("#form-module-template").submit();
{% endblock %}

{% block formHtml %}
    <div class="row">
        <div class="col-md-12">
            <form id="form-module-template"
                  class="XiboForm form-horizontal"
                  method="post"
                  action="{{ url_for("developer.templates.add") }}">

                <div class="form-group row code-input-group xibo-code-input">
                    <div class="col-sm-12">
                        <small class="form-text text-muted">{{ "Module Template XML"|trans }}</small>
                        <textarea class="form-control d-none code-input" id="input_script" name="xml" rows="30" data-code-type="xml"></textarea>

                        <div class="code-input-editor-container" style="height: 70vh;">
                            <div class="code-input-editor"></div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
