{% extends "form-base.twig" %}
{% import "forms.twig" as forms %}

{% block formTitle %}
    {% set layout = layout.layout %}
    {% trans %}Discard {{ layout }}{% endtrans %}
{% endblock %}

{% block formButtons %}
    {% trans "Cancel" %}, XiboDialogClose()
    {% trans "Discard" %}, $("#layoutDiscardForm").submit()
{% endblock %}

{% block formHtml %}
    <div class="row">
        <div class="col-md-12">
            <form id="layoutDiscardForm" class="XiboForm form-horizontal" method="put" action="{{ urlFor("layout.discard", {id: layout.layoutId}) }}">
				{{ forms.message("Are you sure you want to discard the changes to this Layout and revert to the previous Published version.") }}
            </form>
        </div>
    </div>
{% endblock %}