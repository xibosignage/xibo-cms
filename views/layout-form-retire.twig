{% extends "form-base.twig" %}
{% import "forms.twig" as forms %}

{% block formTitle %}
    {% set layout = layout.layout %}
    {% trans %}Retire {{ layout }}{% endtrans %}
{% endblock %}

{% block formButtons %}
    {% trans "Delete" %}, XiboSwapDialog("{{ url_for("layout.delete.form", {id: layout.layoutId}) }}")
    {% trans "No" %}, XiboDialogClose()
    {% trans "Yes" %}, $("#layoutRetireForm").submit()
{% endblock %}

{% block formHtml %}
    <div class="row">
        <div class="col-md-12">
            <form id="layoutRetireForm" class="XiboForm form-horizontal" method="put" action="{{ url_for("layout.retire", {id: layout.layoutId}) }}">
                {% set title %}{% trans "Are you sure you want to retire this item?" %}{% endset %}
                {{ forms.message(title) }}
            </form>
        </div>
    </div>
{% endblock %}