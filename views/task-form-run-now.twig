{% extends "form-base.twig" %}
{% import "forms.twig" as forms %}

{% block formTitle %}
    {% trans "Run Task Now" %}
{% endblock %}

{% block formButtons %}
    {% trans "Cancel" %}, XiboDialogClose()
    {% trans "Run" %}, $("#taskRunNowForm").submit()
{% endblock %}

{% block formHtml %}
    <div class="row">
        <div class="col-md-12">
            <form id="taskRunNowForm" class="XiboForm form-horizontal" method="post" action="{{ url_for("task.runNow", {"id": task.taskId}) }}">
                {% set message %}{% trans "Are you sure you want to run this task immediately?" %}{% endset %}
                {{ forms.message(message) }}
            </form>
        </div>
    </div>
{% endblock %}