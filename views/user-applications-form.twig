{% extends "form-base.twig" %}
{% import "forms.twig" as forms %}

{% block formTitle %}
    {% trans "Authorized applications for user" %}
{% endblock %}

{% block formButtons %}
    {% trans "Close" %}, XiboDialogClose()
{% endblock %}

{% block callBack %}forms.userApprovedApplicationsFormOpen{% endblock %}

{% block formHtml %}
    <div class="row">
        <div class="col-md-12">
            <table id="applications" class="table table-striped">
                <thead>
                <tr>
                    <th>{% trans "Name" %}</th>
                    <th>{% trans "Approved Date" %}</th>
                    <th>{% trans "Approved IP Address" %}</th>
                    <th></th>
                </tr>
                </thead>
                <tbody>
                    {% for application in applications %}
                        <tr>
                            <td>{{ application.name }}</td>
                            <td>{{ application.approvedDate }}</td>
                            <td>{{ application.approvedIp }}</td>
                            <td><button class="btn btn-danger revokeAccess" name="revoke" title="{% trans "Revoke Access for this Application" %}" data-application-key="{{ application.id }}" data-application-user="{{ currentUser.userId }}"> {% trans "Revoke"%} </button> </td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}