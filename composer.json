{
  "name": "xibosignage/xibo-cms",
  "description": "Xibo Open Source Digital Signage",
  "keywords": [
    "xibo",
    "digital signage",
    "spring signage"
  ],
  "homepage": "http://xibo.org.uk",
  "license": "AGPL-3.0",
  "authors": [
    {
      "name": "Daniel Garner",
      "homepage": "https://github.com/dasgarner"
    },
    {
      "name": "Alexander Harrington",
      "homepage": "https://github.com/alexharrington"
    },
    {
      "name": "Xibo Signage Ltd",
      "homepage": "https://xibo.org.uk"
    },
    {
      "name": "Xibo Contributors",
      "homepage": "https://github.com/xibosignage/xibo/tree/master/contributors"
    }
  ],
  "repositories": [{
    "type": "vcs",
    "url": "https://github.com/xibosignage/support"
  },{
    "type": "vcs",
    "url": "https://github.com/dasgarner/picofeed"
  }],
  "config": {
      "platform": {
          "php": "7.2.9",
          "ext-zmq": "1",
          "ext-mongodb": "1.11.0",
          "ext-gd": "1"
      }
  },
	"minimum-stability": "dev",
	"prefer-stable": true,
  "require": {
    "php": ">=7.2.9",
    "ext-pdo": "*",
    "ext-json": "*",
    "ext-zip": "*",
    "slim/slim": "^4.3",
    "slim/http": "^1.2",
    "slim/flash": "^0.4",
    "nyholm/psr7": "^1.3",
    "nyholm/psr7-server": "^1.0.1",
    "erusev/parsedown": "~1.5",
    "league/oauth2-server": "^8.0",
    "flynsarmy/slim-monolog": "~1.0",
    "ezyang/htmlpurifier": "^4",
    "sallar/jdatetime": "dev-master",
    "gettext/gettext": "~4.0",
    "slim/twig-view": "3.0.x",
    "twig/twig": "3.x",
    "respect/validation": "1.1.*",
    "intervention/imagecache": "~2.3",
    "emojione/emojione": "^1.4",
    "phpmailer/phpmailer": "6.5.*",
    "guzzlehttp/guzzle": "~6.0",
    "league/oauth2-client": "^2.4",
    "james-heinrich/getid3": "^1.9",
    "onelogin/php-saml": "3.3.x",
    "infostars/picofeed": "dev-master",
    "xibosignage/xibo-xmr": "0.*",
    "tedivm/stash": "^0.14.1",
    "phenx/php-font-lib": "^0.5.0",
    "abraham/twitteroauth": "^0.6.4",
    "symfony/event-dispatcher": "^4.1",
    "xibosignage/support": "dev-master",
    "xibosignage/oauth2-xibo-cms": "dev-feature/3.0",
    "mtdowling/cron-expression": "^1.1",
    "ralouphie/mimey": "^1.0",
    "robmorgan/phinx": "^0.9.2",
    "johngrogg/ics-parser": "^2.1",
    "phpseclib/mcrypt_compat": "^1.0",
	"psr/log": "1.1.*",
    "mongodb/mongodb": "^1.10",
    "apereo/phpcas": "^1.3",
	"robthree/twofactorauth": "dev-master",
    "mpdf/mpdf": "^8.0",
    "php-di/php-di" : "6.0.*",
    "php-di/slim-bridge" : "^3.0",
    "akrabat/ip-address-middleware" : "1.*",
    "selective/samesite-cookie": "^0.1.0",
    "nesbot/carbon": "^2.32"
  },
  "require-dev": {
    "phpunit/phpunit": "^5",
    "zircote/swagger-php": "^2",
    "doctrine/instantiator": "1.0.*",
    "doctrine/annotations": "^1",
    "squizlabs/php_codesniffer": "3.*",
    "exussum12/coverage-checker": "^0.11.2",
    "micheh/phpcs-gitlab": "^1.1"
  },
  "autoload": {
    "psr-4": { "Xibo\\" : "lib/", "Xibo\\Custom\\": "custom/" }
  },
  "autoload-dev": {
    "psr-4": {
      "Xibo\\Tests\\": "tests/"
    }
  }
}
