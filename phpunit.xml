<phpunit bootstrap="tests/Bootstrap.php"
         colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true">
      <testsuites>
        <testsuite name="Xibo Integration Test Suite">
            <directory>tests/integration/*Test.php</directory>
            <directory>tests/integration/Widget/*Test.php</directory>
        </testsuite>
      </testsuites>
    <groups>
      <exclude>
        <group>broken</group>
      </exclude>
    </groups>
    <filter>
        <whitelist>
            <directory>lib</directory>
        </whitelist>
    </filter>
    <logging>
        <log type="junit" target="results.xml" logIncompleteSkipped="true"/>
    </logging>
</phpunit>
